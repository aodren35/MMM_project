<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mmm.pingmeat.NewFoodTruckActivity">

    <EditText
        android:id="@+id/field_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:hint="Nom"
        android:maxLines="1" />

    <EditText
        android:id="@+id/field_foodtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/field_name"
        android:layout_alignLeft="@+id/field_name"
        android:layout_alignRight="@+id/field_name"
        android:layout_alignStart="@+id/field_name"
        android:layout_below="@+id/field_name"
        android:ems="10"
        android:hint="Products" />

    <EditText
        android:id="@+id/field_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/field_foodtype"
        android:layout_alignLeft="@+id/field_foodtype"
        android:layout_alignRight="@+id/field_foodtype"
        android:layout_alignStart="@+id/field_foodtype"
        android:layout_below="@+id/field_foodtype"
        android:ems="10"
        android:hint="€, €€, €€€" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/field_mapview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_submit_post"
        android:layout_alignEnd="@+id/field_price"
        android:layout_alignLeft="@+id/field_price"
        android:layout_alignRight="@+id/field_price"
        android:layout_alignStart="@+id/field_price"
        android:layout_below="@+id/field_price"
        android:layout_marginTop="13dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_navigation_check_24"/>

</RelativeLayout>
